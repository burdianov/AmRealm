<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/spacing_tiny_4"
    android:layout_width="@dimen/size_medium_48"
    android:layout_height="@dimen/spacing_medium_32"
    android:paddingRight="@dimen/spacing_small_8"
    android:layout_gravity="end">

    <ImageView
        android:layout_width="@dimen/size_small_24"
        android:layout_height="@dimen/size_small_24"
        android:layout_gravity="start"
        android:src="@drawable/ic_shopping_basket_black_24dp"/>

    <FrameLayout
        android:id="@+id/view_alert_red_circle"
        android:layout_width="@dimen/size_small_16"
        android:layout_height="@dimen/size_small_16"
        android:layout_gravity="top|end"
        android:background="@drawable/circle_color_accent"
        android:visibility="visible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/view_alert_count_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/size_badge_text"
            android:text="3"
            tools:text="3"/>

    </FrameLayout>

</FrameLayout>